<?xml version="1.0" encoding="utf-8"?>
<com.longshihan.commonlibrary.widget.errlayout.LoadDataLayout
    android:id="@+id/loadDataLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longshihan.moodtail.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/enableCamera"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/app_name"/>

        <Button
            android:id="@+id/enablelogin"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="@string/app_name"/>

        <com.longshihan.commonlibrary.widget.recycler.LFRecyclerView
            android:id="@+id/mainrecy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.longshihan.commonlibrary.widget.recycler.LFRecyclerView>

    </LinearLayout>
</com.longshihan.commonlibrary.widget.errlayout.LoadDataLayout>